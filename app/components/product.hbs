<div class="m-4 p-5 border border-cyan-950 rounded-lg w-1/3">
  <img src="/asssets/images/{{@product.name}}.png" alt="aaa" />
  <p class="my-2">
    <span>Product name: {{@product.name}}</span>
    <span>Product price: {{@product.price}}</span>
  </p>
  <p class="my-2">In Cart: {{this.quantity}}</p>
  <p class="my-2">Total Price: {{this.total_price}}</p>
  <button
    type="button"
    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
    id={{@product.id}}
    {{on "click" this.addToCart }}
  >
    Add to cart
  </button>
</div>
